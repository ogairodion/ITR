include data.pug

section.experience#experience
    .l-default
        .wrapper
            .caption.col-33.f-caps-14 мы  в цифрах
            .col-info
                .title.f-h2 Опыт работы компании
                .subtitle.f-body-big Наши специалисты имеют большой опыт разработки в различных отраслях.
        .experience__items 
            each experience_item, index in experience_items
                - if (experience_item.bg)
                    .experience__item(class=experience_item.class style=`background-image: url(${experience_item.bg}.webp), url(${experience_item.bg}.jpg);background-size: cover;`)
                        .experience__item-number.f-numbers-big= experience_item.number
                        .experience__item-text.f-body-big= experience_item.text
                - else
                    .experience__item(class=experience_item.class)
                        .experience__item-number.f-numbers-big= experience_item.number
                        .experience__item-text.f-body-big= experience_item.text