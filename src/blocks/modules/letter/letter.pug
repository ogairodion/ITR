include ../.././components/tag/tag.pug
include data.pug 

section.letter
    .l-default
        .wrapper
            .caption.col-33.f-caps-14.js-animation-up  Благодарственные письма
            .col-info
                .title.f-h2.js-animation-up  Заголовок блока в разработке
                .subtitle.f-body-big.js-animation-up  Более чем 10 лет наша команда помогает разрабатывать различные пользовательские программные решения.
        .letter__sliders.js-animation-up 
            .letter__slider.swiper
                .swiper-wrapper 
                    each letter_slide, index in letter_slides
                        .swiper-slide.letter__slide
                            a.letter__slide-img(href=`img/${letter_slide.img}.jpg` data-fancybox)
                                +webp([letter_slide.img], 'jpg')
                                .letter__slide-img--hover 
                                    +svgColor('search-plus')
                            .letter__slide-info
                                .letter__slide-tags 
                                    each letter_tag in letter_slide.tags
                                        +tag(letter_tag.text)
                                .letter__slide-content
                                    .letter__slide-photo
                                        +webp([letter_slide.photo], 'jpg')
                                    .letter__slide-title.f-h3= letter_slide.title
                                    .letter__slide-text.f-body-15= letter_slide.text
            .letter__thumbs.swiper  
                .swiper-wrapper 
                    each letter_slide, index in letter_slides
                        .swiper-slide.letter__thumb
                            +webp([letter_slide.img], 'jpg')
        .slider-navigation.slider-navigation-2.js-animation-up 
            .slider-navigation__arrow.slider-navigation__arrow-prev
                +svgMono('arrow-slider')
            .slider-navigation__arrow.slider-navigation__arrow-next
                +svgMono('arrow-slider')
            .slider-navigation__numbers 
                .slider-navigation__numbers-current.f-numbers-s 1
                .slider-navigation__numbers-dash.f-numbers-s &nbsp;-&nbsp;
                .slider-navigation__numbers-all.f-numbers-s 5
        .slider-navigation--main.slider-navigation.slider-navigation-2
            .slider-navigation__arrow.slider-navigation__arrow-prev--main
                +svgMono('arrow-slider')
            .slider-navigation__arrow.slider-navigation__arrow-next--main
                +svgMono('arrow-slider')
            .slider-navigation__numbers 
                .slider-navigation__numbers-current.slider-navigation__numbers-current--main.f-numbers-s 1
                .slider-navigation__numbers-dash.f-numbers-s &nbsp;-&nbsp;
                .slider-navigation__numbers-all.slider-navigation__numbers-all--main.f-numbers-s 5
                                
