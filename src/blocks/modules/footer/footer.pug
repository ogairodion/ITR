include data.pug

footer.footer
    .footer__top
        .l-default 
            .footer__top-wrapper
                .footer__top-title.f-h3 Подпишитесь на наши новости
                form.form.footer__form
                    input.form__input.f-h3(type="email" name="email" placeholder="Укажите свой Email")
                    button.form__submit
                        +svgColor('navigation')
    .footer__content
        .l-default 
            .footer__content-item
                a.phone(href="tel:+78001564585") +7 800 156 45 85 
                .footer__time 8:00 — 20:00 по Московскому времени
                a.footer__email(href="mailto:hello@IT-RS.com") hello@IT-RS.com
                .footer__messengers
                    .footer__messenger
                        img(src="img/svg/telegram.svg", alt="")
                    .footer__messenger
                        img(src="img/svg/whatsapp.svg", alt="")
                    .footer__messenger
                        img(src="img/svg/viber.svg", alt="")
            .footer__content-item
                .footer__menu
                    each footer_menu_item in footer_menu
                        a.footer__menu-item(href=footer_menu_item.href)= footer_menu_item.text
                .footer__presentations
                    a.footer__presentation(href="" download)
                        .footer__presentation-text Презентация компании
                        .footer__presentation-format PDF — 2,5 mb
                    a.footer__presentation(href="" download)
                        .footer__presentation-text Реквизиты компании
                        .footer__presentation-format PDF — 2,5 mb
    .footer__bottom
        .l-default 
            .footer__bottom-copyrights Все права защищены
            .footer__logo 
                +svgColor('logo-blue')
            .footer__bottom-copyrights © ООО Ай-ти Ресурсы, 2023
